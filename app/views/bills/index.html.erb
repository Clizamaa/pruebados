<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Fecha Pago</th>
                <th scope="col">Cuenta</th>
                <th scope="col">Monto</th>
            </tr>
        </thead>
         <% @bills.each do |bill| %>
        <tbody>
            <tr>

                <td><%= bill.created_at.strftime("%d/%m/%Y") %></td>
                <td><%= bill.title %></td>
                <td><%= bill.price %></td>
            </tr>
        </tbody>
        <% end %>
    </table>

    <%= link_to "Crear", "/bills/new", class: 'btn btn-success' %>
</div>
